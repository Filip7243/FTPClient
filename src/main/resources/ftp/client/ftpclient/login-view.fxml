                    <graphic>
                        <TextField fx:id="hostNameInput" maxWidth="200.0" prefWidth="200.0"/>
                    </graphic>
                </Label>
                <Label contentDisplay="RIGHT" text="User Name">
                    <graphic>
                        <TextField fx:id="usernameInput" maxWidth="200.0" prefWidth="200.0"/>
                    </graphic>
                </Label>
                <Label alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="10.0" minWidth="100.0" text="Password">
                    <graphic>
                        <PasswordField fx:id="passwordInput" minWidth="200.0"/>
                    </graphic>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <Button fx:id="connectBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="91.0" text="CONNECT"/>
                <Label text="ERROR LABEL"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
